<Window x:Class="TestNeuroLib_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestNeuroLib_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Name="Output"></TextBlock>

        <StackPanel  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="20">
           <TextBox Width="350" TextWrapping="Wrap" FontSize="25" Name="Input">Ввидите слово</TextBox>
            <Button Height="30" BorderThickness="0" Click="Button_Click" Margin="20">Предсказание</Button>
        </StackPanel>

    </Grid>
</Window>
